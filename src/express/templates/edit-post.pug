extends layout
include mixins/error-message

block content
  main
    section
      .popup.popup--new-publication.popup--anti
        .new-publication
          form(action=`/articles/edit/${id}` method='post'
            enctype='multipart/form-data')
            .new-publication__header
              h1 Новая публикация
              .new-publication__date-form
                h3 Дата публикации
                .new-publication__date-form-division
                  .new-publication__date-block
                    label(for='new-publication-date' aria-label='Календарь')
                    input#new-publication-date(type='text' name='date'
                      placeholder='2019-03-21' value=article.createdDate)
              button.new-publication__button.button.button--colored(type='submit') Опубликовать
            +errorMessages(validationMessages)
            a.popup__button.button.button--popup-close(aria-label='Закрыть окно')
              | Закрыть
              | окно
            .new-publication__form.form
              .form__wrapper.form__wrapper--intro
                .form__field
                  label
                    input(type='text' name='title' placeholder='Заголовок' required='' value=article.title)
                .form__field.form__field--post-image
                  label
                    input#image-name-field(type='text' name='photo' placeholder='Фотография' readonly='' value=`${article.picture ? article.picture : ''}`)
                  .form__image-loader.form__image-loader--publication
                    label
                      input.visually-hidden(type='file' name='upload')
                      | Обзор
                .new-publication__category-wrapper
                  each category, index in categories
                    .new-publication__checkbox.new-publication__checkbox--auto
                      -
                        let checked = article.categories.find((it) => it.id
                        === category.id)
                      input(id=`checkbox-auto-${index}` type='checkbox'
                        name='category[]' value=`${category.id}` checked=
                      checked)
                      label(for=`checkbox-auto-${index}`)= category.name
                  a.new-publication__form-link.button.button--transparent(href='/categories') Добавить категорию
              .form__wrapper.form__wrapper--text
                .form__field.form__field--publication-text
                  label
                    textarea(rows='5' name='announcement' placeholder='Анонс публикации')= article.announce
                .form__field.form__field--publication-text
                  label
                    textarea(rows='10' name='fullText' placeholder='Полный ' +
                    'текст публикации')= article.fullText
