mixin categories(className, id)
  section(class= className)
    h2.visually-hidden Список тем
    ul.themes
      each category in categories
        li.themes__item
          a.themes__item-link(
            href=`/articles/category/${category.id}`
            class=(+id === +category.id ? 'themes__item-link--active' : '')
          )
            | #{category.name}
            sup #{category.count}
