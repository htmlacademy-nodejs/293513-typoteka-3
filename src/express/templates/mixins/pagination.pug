mixin pagination(page, totalPages, width, prefix)
  -
    var start = page - width;
    var end = page + width;

    if (start < 1) {
      end += 1 - start;
      start = 1;
    }

    if (end > totalPages) {
      start -= end - totalPages;
      end = totalPages;
    }

    if (start < 1) {
      start = 1;
    }

    var i = start - 1

  .preview__toggle-wrapper
    ul.preview__pagination.pagination(style={['justify-content']: 'center'})
      li
        a.pagination__button.button.button--backwards(
          class={['button--disabled']: page === 1}
          href=`${prefix}page=${page - 1}` aria-label='Страница назад'
        ) Назад
      while i++ < end
        li.pagination__item(class={['pagination__item--active']: i === page})
          a(href=`${prefix}page=${i}`)= i
      li
        a.pagination__button.button.button--forward(
          class={['button--disabled']: page === totalPages}
          href=`${prefix}page=${page + 1}` aria-label='Страница вперед'
        ) Вперед
